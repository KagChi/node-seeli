{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["ES2023"],
      "module": "node16",
      "moduleResolution": "node16",
      "rootDir": "lib",
      "outDir": "dist",
      "target": "es2020",
      "declaration": true,
      "declarationMap": true, 
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["lib"],
}